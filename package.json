{
  "name": "ts-bp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm-run-all build:client build:server",
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "lint": "tslint src/**/* webpack/**/*",
    "prestart": "npm run build",
    "start": "better-npm-run start:prod",
    "start:dev": "npm-run-all --parallel start:dev:client start:dev:server start:dev:all",
    "start:dev:all": "better-npm-run start:dev",
    "start:dev:client": "better-npm-run start:dev:client",
    "start:dev:server": "better-npm-run start:dev:server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "betterScripts": {
    "build:client": {
      "command": "webpack --config ./webpack/config.ts --colors --display-error-details",
      "env": {
        "NODE_ENV": "production",
        "WEBPACK_MODE": "client"
      }
    },
    "build:server": {
      "command": "webpack --config ./webpack/config.ts --colors --display-error-details",
      "env": {
        "NODE_ENV": "production",
        "WEBPACK_MODE": "server"
      }
    },
    "start:dev:client": {
      "command": "webpack-dev-server --hot --inline --config ./webpack/config.ts --port 8081 --colors --display-error-details",
      "env": {
        "WEBPACK_MODE": "client"
      }
    },
    "start:dev:server": {
      "command": "webpack --config ./webpack/config.ts --colors --display-error-details --watch",
      "env": {
        "WEBPACK_MODE": "server"
      }
    },
    "start:dev": {
      "command": "ts-node src",
      "env": {
        "NODE_ENV": "development",
        "WEBPACK_MODE": "server"
      }
    },
    "start:prod": {
      "command": "ts-node src --fast",
      "env": {
        "NODE_ENV": "development",
        "WEBPACK_MODE": "server"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LukeSheard/react-ts-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LukeSheard/react-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/LukeSheard/react-ts-boilerplate#readme",
  "devDependencies": {
    "@types/node": "^6.0.59",
    "@types/react": "0.0.0",
    "@types/react-dom": "^0.14.20",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "css-loader": "^0.26.1",
    "cssnano": "^3.10.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "json-loader": "^0.5.4",
    "npm-run-all": "^4.0.0",
    "postcss-loader": "^1.2.1",
    "style-loader": "^0.13.1",
    "ts-loader": "^1.3.3",
    "ts-node": "^2.0.0",
    "tslint": "^4.3.1",
    "tslint-react": "^2.2.0",
    "typescript": "^2.1.4",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "better-npm-run": "0.0.14",
    "express": "^4.14.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "universal-webpack": "^0.2.1",
    "webpack": "^2.2.0-rc.3",
    "webpack-multi-configurator": "^1.1.2"
  }
}
