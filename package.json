{
  "name": "ts-bp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "cross-env rimraf dist",
    "build": "npm-run-all build:client build:server",
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "lint": "tslint src/**/* webpack/*",
    "start": "node index.js",
    "start:dev": "npm-run-all --parallel start:webpack:client start:webpack:server start:dev:server",
    "start:dev:server": "better-npm-run start:dev",
    "start:webpack:client": "better-npm-run start:dev:client",
    "start:webpack:server": "better-npm-run start:dev:server"
  },
  "betterScripts": {
    "build:client": {
      "command": "webpack -p --config ./webpack/config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:server": {
      "command": "webpack -p --config ./webpack/config.js",
      "env": {
        "NODE_ENV": "production",
        "WEBPACK_MODE": "server"
      }
    },
    "start:dev:client": {
      "command": "webpack-dev-server --config ./webpack/config.js --port 8081",
      "env": {
        "WEBPACK_MODE": "client"
      }
    },
    "start:dev:server": {
      "command": "webpack --config ./webpack/config.js --watch",
      "env": {
        "NODE_ENV": "development",
        "WEBPACK_MODE": "server"
      }
    },
    "start:dev": {
      "command": "nodemon index.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LukeSheard/react-ts-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LukeSheard/react-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/LukeSheard/react-ts-boilerplate#readme",
  "devDependencies": {
    "@types/node": "^6.0.59",
    "@types/react": "0.0.0",
    "@types/react-dom": "^0.14.20",
    "@types/react-router": "^2.0.41",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.18.0",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "json-loader": "^0.5.4",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "ts-loader": "^1.3.3",
    "tslint": "^4.3.1",
    "tslint-react": "^2.2.0",
    "webpack": "^2.2.0-rc.3",
    "webpack-dev-server": "^2.2.0-rc.0",
    "webpack-multi-configurator": "^1.1.2"
  },
  "dependencies": {
    "better-npm-run": "0.0.14",
    "cross-env": "^3.1.4",
    "express": "^4.14.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.0",
    "source-map-support": "^0.4.8",
    "ts-node": "^2.0.0",
    "typescript": "^2.1.4",
    "universal-webpack": "^0.2.1"
  }
}
