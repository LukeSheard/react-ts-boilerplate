{
  "name": "typescript-react-boilerplate",
  "version": "1.0.0",
  "description": "A Typescript Boilerplate for Universal Applications with a minimal redux boilerplate",
  "main": "index.ts",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm-run-all build:client build:server",
    "build:client": "webpack -p --env production:client",
    "build:server": "webpack -p --env produdction:server",
    "start": "ts-node bin",
    "prestart:dev": "npm run clean",
    "start:dev": "npm-run-all --parallel start:webpack:client start:webpack:server start:dev:server",
    "start:dev:server": "nodemon --exec 'ts-node' bin --no-cache",
    "start:webpack:client": "webpack-dev-server --env dev:client --port 8081 --hot --inline",
    "start:webpack:server": "webpack --env dev:server --watch",
    "test": "npm-run-all lint test:unit",
    "lint:lint": "tslint src/**/*.ts src/**/*.tsx webpack/**/*.ts config/index.ts",
    "test:unit": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LukeSheard/react-ts-boilerplate.git"
  },
  "keywords": [],
  "author": "Luke Sheard <me@lukesheard.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LukeSheard/react-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/LukeSheard/react-ts-boilerplate#readme",
  "devDependencies": {
    "@types/enzyme": "^2.7.1",
    "@types/express": "^4.0.34",
    "@types/extract-text-webpack-plugin": "^2.0.0",
    "@types/history": "^2.0.45",
    "@types/jest": "^16.0.4",
    "@types/node": "^6.0.46",
    "@types/react": "^0.14.44",
    "@types/react-dom": "^0.14.18",
    "@types/react-redux": "^4.4.35",
    "@types/react-router": "^2.0.38",
    "@types/react-router-redux": "^4.0.37",
    "@types/webpack": "^2.2.0",
    "@types/webpack-merge": "0.0.4",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^18.1.0",
    "json-loader": "^0.5.4",
    "nodemon": "^1.11.0",
    "normalize.css": "^5.0.0",
    "npm-run-all": "^4.0.0",
    "react-addons-test-utils": "^15.4.2",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "supertest": "^2.0.1",
    "ts-jest": "^18.0.1",
    "ts-loader": "^1.3.3",
    "tslint": "^4.3.1",
    "tslint-react": "^2.2.0",
    "webpack-dev-server": "^2.2.0-rc.0"
  },
  "dependencies": {
    "express": "^4.14.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^3.3.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "ts-node": "^2.0.0",
    "typescript": "^2.1.4",
    "universal-webpack": "^0.2.1",
    "webpack": "2.2.0-rc.3",
    "webpack-merge": "^2.4.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*",
      "!src/global.d.ts",
      "!src/client/index.tsx"
    ],
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "config",
      "src",
      "src/common",
      "src/server"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "transform": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/filepreprocessor.js",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
