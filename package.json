{
  "name": "ts-bp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "better-npm-run build:client && better-npm-run build:server",
    "lint": "tslint src/**/*.ts webpack/**/*.ts webpack.config.ts www:dev.ts --fix --type-check",
    "start": "node index.js",
    "start:dev": "ts-node www:dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "betterScripts": {
    "start": {
      "command": "ts-node www:dev",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build:client": {
      "command": "webpack -p --progress",
      "env": {
        "WEBPACK_MODE": "production",
        "NODE_ENV": "production"
      }
    },
    "build:server": {
      "command": "webpack -p --progress",
      "env": {
        "WEBPACK_MODE": "server",
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LukeSheard/react-ts-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LukeSheard/react-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/LukeSheard/react-ts-boilerplate#readme",
  "dependencies": {
    "better-npm-run": "0.0.14",
    "chalk": "^1.1.3",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "ts-node": "^2.0.0",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0",
    "webpack-isomorphic-tools": "^2.6.5",
    "webpack-multi-configurator": "^1.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.34",
    "@types/node": "^6.0.58",
    "@types/react": "0.0.0",
    "@types/react-dom": "^0.14.20",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "isomorphic-style-loader": "^1.1.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.1.1",
    "postcss-loader": "^1.2.1",
    "pre-commit": "^1.2.2",
    "react-hot-loader": "^1.3.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "ts-loader": "^1.3.3",
    "tslint": "^4.3.1",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "pre-commit": [
    "lint"
  ]
}
