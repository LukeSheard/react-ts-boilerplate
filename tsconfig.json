{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": [
        "src/*",
        "src/common/*"
      ],
      "components": [
        "src/common/*",
        "src/common/components/*"
      ],
      "config": [
        "config/*"
      ],
      "server": [
        "src/server/*"
      ]
    },
    "pretty": true,
    "sourceMap": true,
		"strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "bin/**/*",
    "config/**/*",
    "src/**/*",
    "webpack/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "src/**/*.spec*"
  ]
}
