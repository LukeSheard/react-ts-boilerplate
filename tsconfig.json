{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "config": [
        "config"
      ],
      "*": [
        "src/*"
      ]
    },
    "jsx": "react",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "dist",
		"removeComments": false,
    "sourceMap": true,
		"strictNullChecks": false,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
