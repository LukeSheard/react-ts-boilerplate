{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
		"removeComments": false,
    "sourceMap": true,
		"strictNullChecks": false,
    "target": "es5"
  },
  "include": [
    "src/**/*",
    "webpack/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
